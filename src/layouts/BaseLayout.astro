---
const { title = 'Countable Metrics Odometer Diary' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      :root {
        --bg: #0f172a;
        --bg-card: #111827;
        --primary: #3b82f6;
        --primary-soft: rgba(59, 130, 246, 0.15);
        --accent: #22c55e;
        --text: #e5e7eb;
        --text-muted: #9ca3af;
        --border: #1f2937;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          sans-serif;
        background: radial-gradient(circle at top left, #1d283a, #020617 55%);
        color: var(--text);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        padding: 1.5rem;
      }

      main {
        width: 100%;
        max-width: 960px;
        background: linear-gradient(145deg, #020617, #020617);
        border-radius: 1.25rem;
        padding: 1.75rem 1.5rem 2rem;
        box-shadow:
          0 25px 50px -12px rgba(15, 23, 42, 0.9),
          0 0 0 1px rgba(148, 163, 184, 0.08);
      }

      @media (min-width: 768px) {
        main {
          padding: 2rem 2rem 2.5rem;
        }
      }

      h1,
      h2 {
        margin-top: 0;
        letter-spacing: -0.03em;
      }

      h1 {
        font-size: 1.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      h1::before {
        content: '';
        display: inline-block;
        width: 0.75rem;
        height: 0.75rem;
        border-radius: 999px;
        background: radial-gradient(circle, var(--accent), var(--primary));
        box-shadow: 0 0 18px rgba(34, 197, 94, 0.9);
      }

      p {
        color: var(--text-muted);
      }

      a {
        text-decoration: none;
      }

      button {
        border: none;
        border-radius: 999px;
        padding: 0.6rem 1.4rem;
        background: linear-gradient(135deg, var(--primary), #6366f1);
        color: white;
        font-weight: 500;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        box-shadow:
          0 10px 25px -10px rgba(37, 99, 235, 0.8),
          0 0 0 1px rgba(59, 130, 246, 0.3);
        transition:
          transform 0.12s ease,
          box-shadow 0.12s ease,
          background 0.12s ease;
      }

      button:hover {
        transform: translateY(-1px);
        box-shadow:
          0 15px 30px -12px rgba(59, 130, 246, 0.9),
          0 0 0 1px rgba(129, 140, 248, 0.7);
      }

      button:active {
        transform: translateY(0);
        box-shadow:
          0 4px 12px -4px rgba(37, 99, 235, 0.9),
          0 0 0 1px rgba(79, 70, 229, 0.8);
      }

      form {
        margin-top: 1.25rem;
        padding: 1.25rem 1.1rem;
        border-radius: 0.9rem;
        background: radial-gradient(circle at top left, #020617, #020617);
        border: 1px solid var(--border);
      }

      form > div {
        margin-bottom: 0.9rem;
      }

      label {
        display: block;
        font-size: 0.85rem;
        margin-bottom: 0.25rem;
        color: var(--text-muted);
      }

      input {
        width: 100%;
        padding: 0.55rem 0.7rem;
        border-radius: 0.6rem;
        border: 1px solid var(--border);
        background: #020617;
        color: var(--text);
        font-size: 0.9rem;
        outline: none;
        transition:
          border-color 0.15s ease,
          box-shadow 0.15s ease,
          background 0.15s ease;
      }

      input:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 1px rgba(59, 130, 246, 0.7);
        background: #020617;
      }

      small {
        display: block;
        margin-top: 0.2rem;
        color: var(--text-muted);
        font-size: 0.75rem;
      }

      .tabla {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.85rem;
        border-radius: 0.9rem;
        overflow: hidden;
        margin-top: 0.75rem;
        background: #020617;
        border: 1px solid var(--border);
      }

      .tabla thead {
        background: radial-gradient(circle at top left, #1d283a, #020617);
      }

      .tabla th,
      .tabla td {
        padding: 0.55rem 0.65rem;
        text-align: left;
        border-bottom: 1px solid #111827;
      }

      .tabla th {
        font-weight: 500;
        color: var(--text-muted);
        font-size: 0.78rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
      }

      .tabla tbody tr:nth-child(even) {
        background: #020617;
      }

      .tabla tbody tr:nth-child(odd) {
        background: #020617;
      }

      .tabla tbody tr:hover {
        background: var(--primary-soft);
      }

      .grafico-barras {
        margin-top: 0.5rem;
        display: flex;
        align-items: flex-end;
        gap: 0.55rem;
        padding: 0.9rem;
        border-radius: 0.9rem;
        border: 1px solid var(--border);
        background: radial-gradient(circle at top right, #020617, #020617);
        min-height: 160px;
      }

      .grafico-barras .barra {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        gap: 0.35rem;
      }

      .grafico-barras .barra-fill {
        width: 100%;
        max-width: 26px;
        border-radius: 999px 999px 0 0;
        background: linear-gradient(180deg, var(--accent), var(--primary));
        box-shadow: 0 0 18px rgba(34, 197, 94, 0.6);
        transition: height 0.2s ease;
      }

      .grafico-barras .barra-label {
        font-size: 0.7rem;
        color: var(--text-muted);
        white-space: nowrap;
      }

      .botonera {
        display: flex;
        flex-wrap: wrap;
        gap: 0.6rem;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
