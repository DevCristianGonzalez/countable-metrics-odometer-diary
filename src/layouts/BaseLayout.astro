---
const { title = 'Countable Metrics Odometer Diary' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="theme-color" content="#a5b4fc" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      :root {
        --bg: #f5f5f7;
        --bg-card: #ffffff;
        --primary: #a5b4fc;
        --primary-soft: rgba(165, 180, 252, 0.18);
        --accent: #f9a8d4;
        --text: #111827;
        --text-muted: #6b7280;
        --border: #e5e7eb;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          sans-serif;
        background: var(--bg);
        color: var(--text);
        min-height: 100vh;
        display: flex;
        justify-content: center;
      }

      main {
        width: 100%;
        max-width: 480px;
        min-height: 100vh;
        background: var(--bg-card);
        border-radius: 1.5rem 1.5rem 0 0;
        padding: 1.25rem 1.2rem 1.5rem;
        box-shadow: 0 -1px 20px rgba(15, 23, 42, 0.05);
      }

      @media (min-width: 640px) {
        main {
          margin-top: 1.5rem;
          margin-bottom: 1.5rem;
          border-radius: 1.5rem;
        }
      }

      h1,
      h2 {
        margin-top: 0;
        letter-spacing: -0.03em;
      }

      h1 {
        font-size: 1.6rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      h1::before {
        content: '';
        display: inline-block;
        width: 0.6rem;
        height: 0.6rem;
        border-radius: 999px;
        background: radial-gradient(circle at 30% 30%, var(--accent), var(--primary));
        box-shadow: 0 0 12px rgba(165, 180, 252, 0.9);
      }

      p {
        color: var(--text-muted);
        font-size: 0.92rem;
      }

      a {
        text-decoration: none;
      }

      button {
        border: none;
        border-radius: 999px;
        padding: 0.7rem 1.3rem;
        background: linear-gradient(135deg, var(--primary), #c4b5fd);
        color: #111827;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        box-shadow: 0 8px 20px rgba(148, 163, 184, 0.45);
        transition:
          transform 0.12s ease,
          box-shadow 0.12s ease,
          background 0.12s ease;
      }

      button:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 24px rgba(148, 163, 184, 0.6);
      }

      button:active {
        transform: translateY(0);
        box-shadow: 0 4px 12px rgba(148, 163, 184, 0.6);
      }

      form {
        margin-top: 1.25rem;
        padding: 1.25rem 1.1rem;
        border-radius: 0.9rem;
        background: #f9fafb;
        border: 1px solid var(--border);
      }

      form > div {
        margin-bottom: 0.9rem;
      }

      label {
        display: block;
        font-size: 0.85rem;
        margin-bottom: 0.25rem;
        color: var(--text-muted);
      }

      input {
        width: 100%;
        padding: 0.55rem 0.7rem;
        border-radius: 0.6rem;
        border: 1px solid var(--border);
        background: #ffffff;
        color: var(--text);
        font-size: 0.9rem;
        outline: none;
        transition:
          border-color 0.15s ease,
          box-shadow 0.15s ease,
          background 0.15s ease;
      }

      input:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 1px rgba(59, 130, 246, 0.7);
        background: #ffffff;
      }

      small {
        display: block;
        margin-top: 0.2rem;
        color: var(--text-muted);
        font-size: 0.75rem;
      }

      .tabla {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.85rem;
        border-radius: 0.9rem;
        overflow: hidden;
        margin-top: 0.75rem;
        background: #f9fafb;
        border: 1px solid var(--border);
      }

      .tabla thead {
        background: #eef2ff;
      }

      .tabla th,
      .tabla td {
        padding: 0.55rem 0.65rem;
        text-align: left;
        border-bottom: 1px solid #111827;
      }

      .tabla th {
        font-weight: 500;
        color: var(--text-muted);
        font-size: 0.78rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
      }

      .tabla tbody tr:nth-child(even) {
        background: #ffffff;
      }

      .tabla tbody tr:nth-child(odd) {
        background: #f9fafb;
      }

      .tabla tbody tr:hover {
        background: var(--primary-soft);
      }

      .grafico-barras {
        margin-top: 0.5rem;
        display: flex;
        align-items: flex-end;
        gap: 0.55rem;
        padding: 0.9rem;
        border-radius: 0.9rem;
        border: 1px solid var(--border);
        background: #f9fafb;
        min-height: 160px;
      }

      .grafico-barras .barra {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        gap: 0.35rem;
      }

      .grafico-barras .barra-fill {
        width: 100%;
        max-width: 26px;
        border-radius: 999px 999px 0 0;
        background: linear-gradient(180deg, var(--accent), var(--primary));
        box-shadow: 0 0 12px rgba(165, 180, 252, 0.6);
        transition: height 0.2s ease;
      }

      .grafico-barras .barra-label {
        font-size: 0.7rem;
        color: var(--text-muted);
        white-space: nowrap;
      }

      .botonera {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: 1rem;
      }

      .action-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.9rem 1rem;
        border-radius: 0.9rem;
        background: #f9fafb;
        border: 1px solid var(--border);
      }

      .action-card-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: #111827;
      }

      .action-card-desc {
        font-size: 0.8rem;
        color: var(--text-muted);
        margin-top: 0.1rem;
      }

      .action-card button {
        flex-shrink: 0;
        padding-inline: 1.1rem;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker
            .register('/sw.js')
            .catch((err) => console.error('SW registration failed', err));
        });
      }
    </script>
  </body>
</html>
